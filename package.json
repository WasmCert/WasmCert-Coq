{
	"name": "wasm_coq",
	"version": "1.0",
	"description": "Wasm formalisation in Coq",
	"license": "MIT",
	"esy": {
		"buildsInSource": "_build",
		"buildEnv": {
			"COQBIN": "#{@opam/coq.bin}/",
			"COQLIB": "#{@opam/coq.lib}/coq/",
			"COQPATH": "#{coq-ext-lib.install}/user-contrib:#{coq-flocq.install}/coq:#{coq-itree.install}/user-contrib:#{coq-paco.install}/user-contrib:#{strong-induction.install}/lib/coq/user-contrib:#{compcert.install}/coq:#{coq-iris.install}/user-contrib:#{coq-mathcomp-ssreflect.install}/user-contrib:#{parseque.install}/lib/coq/user-contrib:#{@opam/coq-stdpp.install}/user-contrib",
			"VSCODESETTINGS": "{\"coqtop.binPath\":\"#{@opam/coq.root}/bin\",\"coqtop.args\":[\"-coqlib\",\"#{@opam/coq.root}\",\"-R\",\"#{coq-ext-lib.install}/user-contrib\",\"ExtLib\",\"-R\",\"#{coq-flocq.install}/coq\",\"Flocq\",\"-R\",\"#{coq-itree.install}/user-contrib\",\"ITree\",\"-R\",\"#{coq-paco.install}/user-contrib\",\"Paco\",\"-R\",\"#{strong-induction.install}/lib/coq/user-contrib\",\"StrongInduction\",\"-R\",\"#{compcert.install}/coq\",\"compcert\",\"-R\",\"#{coq-iris.install}/user-contrib\",\"iris\",\"-R\",\"#{coq-mathcomp-ssreflect.install}/user-contrib\",\"mathcomp\",\"-R\",\"#{parseque.install}/lib/coq/user-contrib\",\"parseque\",\"-R\",\"#{@opam/coq-stdpp.install}/user-contrib\",\"stdpp\",\"-R\",\"#{self.root}/_build/default/theories\",\"\"]}",
			"TARGETDIR": "#{self.target_dir}"
		},
		"build": "make"
	},
	"scripts": {
		"clean": "make clean",
		"doc": "dune build @doc",
		"test": "dune runtest",
		"vscode": "make vscode"
	},
	"dependencies": {
		"ocaml": "4.8.1000",
		"@opam/coq": "8.13.2",
		"@opam/ocamlfind": "1.8.1",
		"coq-flocq": "3.4.2",
		"compcert": "github:Mbodin/CompCert#54c3b49a756ae7c88a2349777623bae37edde66a",
		"@opam/coq-stdpp": "*",
		"coq-iris": "*",
		"coq-mathcomp-ssreflect": "*",
		"coq-itree": "github:Mbodin/InteractionTrees#bb50829eaa947d2f14ac47ec78113b655d11fbb6",
		"parseque": "github:Mbodin/parseque#02cea4c0d60786010c9878586c3d78865102112f",
		"coq-ext-lib": "*",
		"coq-paco": "github:Mbodin/paco#40cea8feac992e4b69266516ed70f0916366d622",
		"strong-induction": "github:Mbodin/strong-induction#cf8400acfc6931cf98490d5592d0f515f913a923",
		"@opam/cmdliner": "1.0.4",
		"@opam/dune": ">=2.9",
		"@opam/linenoise": "*",
		"@opam/mdx": ">=1.9.0",
		"@opam/odoc": "*"
	},
	"devDependencies": {},
	"resolutions": {
		"coq-mathcomp-ssreflect": {
			"source": "github:math-comp/math-comp#6bff567e84b01c1b3502985ec936b9e74ea252b4",
			"override": {
				"dependencies": {
					"@opam/coq": "*"
				},
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib",
					"COQMAKEFILEOPTIONS": "DESTDIR = '#{self.install}' COQMF_WINDRIVE = '#{@opam/coq.lib}/coq'"
				},
				"build": [
					[ "make", "-C", "mathcomp/ssreflect", "-j", "3" ],
					[ "make", "-C", "mathcomp/ssreflect", "install" ]
				]
			}
		},
		"coq-flocq": {
			"source": "git:https://gitlab.inria.fr/flocq/flocq.git#ca655d2542bdcf024bce5c26dbc0f13b856aa1f6",
			"override": {
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib",
          "COQUSERCONTRIB": "#{self.install}/coq"
				},
				"build": [
					[ "autoconf" ],
					[ "./configure" ],
					[ "./remake", "--jobs=2" ],
					[ "./remake", "install" ]
				]
			}
		},
	    "coq-iris": {
			"source": "git:https://gitlab.mpi-sws.org/iris/iris.git#b32bd7c76ef9279d567f36bbeb8bcacda7d8a6a2",
			"override": {
				"buildsInSource": true,
				"dependencies": {
					"@opam/coq": "8.13.2",
					"@opam/coq-stdpp": "*"
				},
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq-stdpp.install}/user-contrib:#{@opam/coq.lib}/coq/user-contrib"
				},
				"build": [
					[ "#{@opam/coq.bin}/coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq",
						"DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j4" ],
					[ "make", "install" ]
				]
			}
		},
		"@opam/coq-stdpp": {
			"source": "git:https://gitlab.mpi-sws.org/iris/stdpp.git#ebfb79dd8b7d0a1b2d317037cb13969adfa9306c",
			"override": {
				"dependencies": {
					"@opam/coq": "8.13.2"
				},
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib"
				},
				"build": [
					[ "#{@opam/coq.bin}/coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq",
						"DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j4" ],
					[ "make", "install" ]
				]
			}
		},
		"coq-ext-lib": {
			"source": "github:coq-community/coq-ext-lib#159c36111a95e5e587020c9f10b2e2ecd9fa3914",
			"override": {
				"dependencies": {
					"@opam/coq": "*"
				},
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQMAKEFILE": "Makefile.coq"
				},
				"build": [
					[ "coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq", "-install", "user", "DESTDIR", "=", "#{self.install}", "COQMF_WINDRIVE", "=", "#{@opam/coq.lib}/coq" ],
					[ "make", "-j2", "theories" ],
					[ "make", "install" ]
				]
			}
		}
	}
}
